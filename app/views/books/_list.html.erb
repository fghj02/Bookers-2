
<table class='table table-inverse table-hover'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="4"></th>
    </tr>
    </thead>
  <tbody>
  <% books.each do |book| %>
 <tr>
    <td><%= image_tag book.user.get_profile_image,size:'60x60'%></td>
      <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
    <td><%= book.body %></td>
 </tr>
<% end %>
   </tbody>
</table>