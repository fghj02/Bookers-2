

<%= form_with model:book,local:true do |f| %>



  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title , class: 'form-control title' %>
  </div>


  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control body' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>